  "directions": [
    {
      "_id": "5a47b36c277bd9fe34f72b78",
      "step": "Prepare the pastry base, roll it into a pie pan, cover it in plastic and chill it."
    },
    {
      "_id": "5a47b387277bd9fe34f72b79",
      "step": "Combine the remaining ingredients in a bowl and add salt and pepper to taste."
    },
    {
      "_id": "5a47b3ab277bd9fe34f72b7a",
      "step": "Remove the plastic from the pastry and spread the filling into the crust."
    },
    {
      "_id": "5a47b3e0277bd9fe34f72b7b",
      "step": "Bake in a preheated oven at 375F for about 40 minutes or until the top is golden brown."
    },
    {
      "_id": "5a47b3f6277bd9fe34f72b7c",
      "step": "Leave to cool and serve at room temperature."
    }
  ],
